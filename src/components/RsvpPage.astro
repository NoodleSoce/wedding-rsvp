---
import Layout from "../layouts/Layout.astro";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const redirectUrl = lang === "ar" ? "/ar/countdown" : "/countdown";
---

<Layout title={lang === "ar" ? "تأكيد الحضور" : "RSVP"} lang={lang}>
    <main class="page fade">
        <div class="content">
            <div class="card">
                <h2 class="anim anim-1">{t["rsvp.title"]}</h2>
                <p class="sub anim anim-2">{t["rsvp.subtitle"]}</p>

                <form id="form" class="anim anim-3" data-redirect={redirectUrl}>
                    <a href={redirectUrl} data-astro-prefetch="load" hidden></a>

                    <label class="field">
                        <span class="label">{t["rsvp.name"]}</span>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="input"
                            required
                            placeholder={t["rsvp.namePlaceholder"]}
                            autocomplete="name"
                            autocapitalize="words"
                        />
                    </label>

                    <div class="field">
                        <span class="label">{t["rsvp.attending"]}</span>
                        <div class="opts">
                            <label class="opt">
                                <input
                                    type="radio"
                                    name="attending"
                                    value="yes"
                                    checked
                                />
                                <span class="opt-btn yes"
                                    >{t["rsvp.accept"]}</span
                                >
                            </label>
                            <label class="opt">
                                <input
                                    type="radio"
                                    name="attending"
                                    value="no"
                                />
                                <span class="opt-btn no"
                                    >{t["rsvp.decline"]}</span
                                >
                            </label>
                        </div>
                    </div>

                    <div id="guests-wrap" class="guests">
                        <label class="field">
                            <span class="label">{t["rsvp.guests"]}</span>
                            <input
                                type="number"
                                id="guests"
                                name="guests"
                                class="input"
                                min="0"
                                max="9"
                                value="0"
                                inputmode="numeric"
                            />
                        </label>
                    </div>

                    <button type="submit" class="btn">{t["rsvp.submit"]}</button
                    >
                    <p id="error" class="error hidden">{t["rsvp.error"]}</p>
                </form>
            </div>
        </div>

        <div id="loader" class="loader hidden">
            <div class="spin"></div>
            <svg
                class="check"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="3"
            >
                <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            <span id="status">{t["rsvp.sending"]}</span>
        </div>
    </main>
</Layout>

<script>
    import { navigate } from "astro:transitions/client";

    const URL =
        "https://script.google.com/macros/s/AKfycbwq4PjP3sAEj2YTMTge5tZkwDx447v4T-0ySATyf3GImmpnZTaop-NGoxFj-lSyGnTl/exec";
    const KEY = "rsvp";

    document.addEventListener("astro:page-load", () => {
        const form = document.getElementById("form") as HTMLFormElement;
        if (!form) return;

        const name = document.getElementById("name") as HTMLInputElement;
        const guests = document.getElementById("guests") as HTMLInputElement;
        const guestsWrap = document.getElementById("guests-wrap");
        const radios = document.getElementsByName("attending");
        const loader = document.getElementById("loader");
        const status = document.getElementById("status");
        const error = document.getElementById("error");
        const redirect = form.dataset.redirect || "/countdown";

        // Reset loader
        function reset() {
            loader?.classList.add("hidden");
            loader?.classList.remove("done");
            error?.classList.add("hidden");
        }
        reset();
        addEventListener("pageshow", reset);

        // Toggle guests
        function toggleGuests(show: boolean) {
            guestsWrap?.classList.toggle("show", show);
        }

        // Load saved
        try {
            const saved = JSON.parse(localStorage.getItem(KEY) || "{}");
            if (saved.name) name.value = saved.name;
            if (saved.guests) guests.value = saved.guests;
            if (saved.attending) {
                const r = document.querySelector(
                    `input[value="${saved.attending}"]`,
                ) as HTMLInputElement;
                if (r) {
                    r.checked = true;
                    toggleGuests(saved.attending === "yes");
                }
            }
        } catch {}

        // Save
        let t: ReturnType<typeof setTimeout>;
        function save() {
            clearTimeout(t);
            t = setTimeout(() => {
                const r = document.querySelector(
                    'input[name="attending"]:checked',
                ) as HTMLInputElement;
                localStorage.setItem(
                    KEY,
                    JSON.stringify({
                        name: name.value,
                        attending: r?.value,
                        guests: guests.value,
                    }),
                );
            }, 300);
        }

        name.addEventListener("input", save);
        guests.addEventListener("input", () => {
            if (guests.value.length > 1) guests.value = guests.value.slice(-1);
            save();
        });

        radios.forEach((r) =>
            r.addEventListener("change", (e) => {
                toggleGuests((e.target as HTMLInputElement).value === "yes");
                save();
            }),
        );

        // Submit
        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            loader?.classList.remove("hidden");
            error?.classList.add("hidden");

            const coming =
                (
                    document.querySelector(
                        'input[name="attending"]:checked',
                    ) as HTMLInputElement
                )?.value === "yes";

            try {
                await fetch(URL, {
                    method: "POST",
                    mode: "no-cors",
                    body: JSON.stringify({
                        name: name.value.trim(),
                        attending: coming ? "Yes" : "No",
                        guests: coming ? +guests.value : 0,
                    }),
                });

                localStorage.removeItem(KEY);
                loader?.classList.add("done");
                if (status) status.textContent = "✓";
                setTimeout(() => navigate(redirect), 600);
            } catch {
                error?.classList.remove("hidden");
                loader?.classList.add("hidden");
            }
        });
    });
</script>

<style>
    .card {
        text-align: left;
    }

    h2 {
        text-align: center;
        font-size: var(--fs-2xl);
        font-style: italic;
        margin-bottom: 0.25rem;
    }

    .sub {
        text-align: center;
        font-size: var(--fs-sm);
        color: var(--c-white-70);
        margin-bottom: var(--gap-lg);
    }

    .field {
        display: block;
        margin-bottom: var(--gap);
    }

    .label {
        display: block;
        font-size: var(--fs-sm);
        color: var(--c-white-90);
        margin-bottom: 0.375rem;
    }

    .opts {
        display: flex;
        gap: 0.5rem;
    }

    .opt {
        flex: 1;
        cursor: pointer;
    }

    .opt input {
        position: absolute;
        opacity: 0;
    }

    .opt-btn {
        display: block;
        padding: 0.75rem;
        text-align: center;
        font-size: var(--fs-sm);
        background: var(--c-white-10);
        border: 1px solid var(--c-white-20);
        border-radius: var(--radius-sm);
        transition: all 0.15s var(--ease);
    }

    .opt input:checked + .yes {
        background: var(--c-success);
        border-color: var(--c-success);
        font-weight: 600;
    }

    .opt input:checked + .no {
        background: var(--c-error);
        border-color: var(--c-error);
        font-weight: 600;
    }

    .guests {
        display: grid;
        grid-template-rows: 0fr;
        transition: grid-template-rows 0.2s var(--ease);
    }

    .guests.show {
        grid-template-rows: 1fr;
    }

    .guests > * {
        overflow: hidden;
    }

    .btn {
        margin-top: 0.5rem;
    }

    .error {
        text-align: center;
        color: #faa;
        font-size: var(--fs-sm);
        margin-top: var(--gap);
    }

    /* Loader */
    .loader {
        position: fixed;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: rgba(75, 1, 1, 0.96);
        z-index: 999;
        opacity: 1;
        transition: opacity 0.15s;
    }

    .loader.hidden {
        opacity: 0;
        pointer-events: none;
    }

    .spin {
        width: 2rem;
        height: 2rem;
        border: 2px solid var(--c-white-20);
        border-top-color: var(--c-white);
        border-radius: 50%;
        animation: spin 0.5s linear infinite;
        margin-bottom: 0.75rem;
    }

    .check {
        width: 2.5rem;
        height: 2.5rem;
        color: #4ade80;
        margin-bottom: 0.75rem;
        display: none;
    }

    .loader.done .spin {
        display: none;
    }
    .loader.done .check {
        display: block;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }
</style>
