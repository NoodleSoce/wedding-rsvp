---
import Layout from "../layouts/Layout.astro";
import RsvpForm from "./svelte/RsvpForm.svelte";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const redirectUrl = lang === "ar" ? "/ar/countdown" : "/countdown";
const apiEndpoint =
    "https://script.google.com/macros/s/AKfycbwq4PjP3sAEj2YTMTge5tZkwDx447v4T-0ySATyf3GImmpnZTaop-NGoxFj-lSyGnTl/exec";
---

<Layout title={lang === "ar" ? "تأكيد الحضور" : "RSVP"} lang={lang}>
    <main class="rsvp-page animate-fade-in" id="rsvp-page">
        <div
            class="form-wrap w-full max-w-content flex justify-center items-center"
        >
            <RsvpForm
                client:load
                t={t}
                redirectUrl={redirectUrl}
                apiEndpoint={apiEndpoint}
            />
        </div>
    </main>
</Layout>

<style>
    .rsvp-page {
        min-height: 100vh;
        min-height: 100dvh;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: clamp(90px, 75px + 4vw, 120px)
            clamp(1rem, 0.75rem + 1.25vw, 1.75rem)
            clamp(1rem, 0.75rem + 1.25vw, 1.75rem);
        background: #4b0101;
        overflow-y: auto;
        -webkit-overflow-scrolling: touch;
    }

    @media (orientation: landscape) and (max-height: 500px) {
        .rsvp-page {
            align-items: flex-start;
            padding-top: calc(clamp(90px, 75px + 4vw, 120px) + 0.5rem);
        }
    }
</style>
