---
import Layout from "../layouts/Layout.astro";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const redirectUrl = lang === "ar" ? "/ar/countdown" : "/countdown";
---

<Layout title={lang === "ar" ? "تأكيد الحضور" : "RSVP"} lang={lang}>
    <main class="page fade">
        <div class="content">
            <div class="card form-card">
                <h2 class="anim anim-1">{t["rsvp.title"]}</h2>
                <p class="subtitle anim anim-2">{t["rsvp.subtitle"]}</p>

                <form
                    id="form"
                    class="form anim anim-3"
                    data-redirect={redirectUrl}
                >
                    <a
                        href={redirectUrl}
                        data-astro-prefetch="load"
                        hidden
                        aria-hidden="true"></a>

                    <label class="field">
                        <span class="label">{t["rsvp.name"]}</span>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="input"
                            required
                            placeholder={t["rsvp.namePlaceholder"]}
                            autocomplete="name"
                            autocapitalize="words"
                            enterkeyhint="next"
                        />
                    </label>

                    <div class="field">
                        <span class="label">{t["rsvp.attending"]}</span>
                        <div class="radio-group">
                            <label class="radio">
                                <input
                                    type="radio"
                                    name="attending"
                                    value="yes"
                                    checked
                                />
                                <span class="radio-btn yes"
                                    >{t["rsvp.accept"]}</span
                                >
                            </label>
                            <label class="radio">
                                <input
                                    type="radio"
                                    name="attending"
                                    value="no"
                                />
                                <span class="radio-btn no"
                                    >{t["rsvp.decline"]}</span
                                >
                            </label>
                        </div>
                    </div>

                    <div id="guests-wrap" class="guests-wrap show">
                        <label class="field">
                            <span class="label">{t["rsvp.guests"]}</span>
                            <input
                                type="number"
                                id="guests"
                                name="guests"
                                class="input"
                                min="0"
                                max="9"
                                value="0"
                                inputmode="numeric"
                                enterkeyhint="done"
                            />
                        </label>
                    </div>

                    <button type="submit" class="btn" id="submit-btn"
                        >{t["rsvp.submit"]}</button
                    >
                    <p id="error" class="error hidden" role="alert">
                        {t["rsvp.error"]}
                    </p>
                </form>
            </div>
        </div>

        <div id="loader" class="loader hidden" aria-live="polite">
            <div class="spinner" aria-hidden="true"></div>
            <svg class="checkmark" viewBox="0 0 24 24" aria-hidden="true">
                <polyline
                    points="20 6 9 17 4 12"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="3"></polyline>
            </svg>
            <span id="loader-text">{t["rsvp.sending"]}</span>
        </div>
    </main>
</Layout>

<script>
    import { navigate } from "astro:transitions/client";

    const API =
        "https://script.google.com/macros/s/AKfycbwq4PjP3sAEj2YTMTge5tZkwDx447v4T-0ySATyf3GImmpnZTaop-NGoxFj-lSyGnTl/exec";
    const KEY = "rsvp";

    function init() {
        const form = document.getElementById("form") as HTMLFormElement;
        if (!form) return;

        const name = document.getElementById("name") as HTMLInputElement;
        const guests = document.getElementById("guests") as HTMLInputElement;
        const guestsWrap = document.getElementById("guests-wrap");
        const radios = document.querySelectorAll<HTMLInputElement>(
            'input[name="attending"]',
        );
        const loader = document.getElementById("loader");
        const loaderText = document.getElementById("loader-text");
        const error = document.getElementById("error");
        const submitBtn = document.getElementById(
            "submit-btn",
        ) as HTMLButtonElement;
        const redirect = form.dataset.redirect || "/countdown";

        // Reset UI
        function reset() {
            loader?.classList.add("hidden");
            loader?.classList.remove("done");
            error?.classList.add("hidden");
            if (submitBtn) submitBtn.disabled = false;
        }
        reset();
        addEventListener("pageshow", reset);

        // Get attending value
        const getAttending = () =>
            (
                document.querySelector(
                    'input[name="attending"]:checked',
                ) as HTMLInputElement
            )?.value || "yes";

        // Update guests visibility
        function updateGuests() {
            guestsWrap?.classList.toggle("show", getAttending() === "yes");
        }

        // Load saved data
        try {
            const saved = JSON.parse(localStorage.getItem(KEY) || "{}");
            if (saved.name) name.value = saved.name;
            if (saved.guests) guests.value = saved.guests;
            if (saved.attending) {
                const r = document.querySelector(
                    `input[value="${saved.attending}"]`,
                ) as HTMLInputElement;
                if (r) r.checked = true;
            }
            updateGuests();
        } catch {}

        // Save with debounce
        let saveTimer: ReturnType<typeof setTimeout>;
        function save() {
            clearTimeout(saveTimer);
            saveTimer = setTimeout(() => {
                localStorage.setItem(
                    KEY,
                    JSON.stringify({
                        name: name.value,
                        attending: getAttending(),
                        guests: guests.value,
                    }),
                );
            }, 200);
        }

        // Events
        name.addEventListener("input", save);
        guests.addEventListener("input", () => {
            if (guests.value.length > 1) guests.value = guests.value.slice(-1);
            save();
        });
        radios.forEach((r) =>
            r.addEventListener("change", () => {
                updateGuests();
                save();
            }),
        );

        // Submit
        form.addEventListener("submit", async (e) => {
            e.preventDefault();
            loader?.classList.remove("hidden");
            error?.classList.add("hidden");
            if (submitBtn) submitBtn.disabled = true;

            const coming = getAttending() === "yes";

            try {
                await fetch(API, {
                    method: "POST",
                    mode: "no-cors",
                    body: JSON.stringify({
                        name: name.value.trim(),
                        attending: coming ? "Yes" : "No",
                        guests: coming ? +guests.value : 0,
                    }),
                });

                localStorage.removeItem(KEY);
                loader?.classList.add("done");
                if (loaderText) loaderText.textContent = "✓";
                setTimeout(() => navigate(redirect), 400);
            } catch {
                error?.classList.remove("hidden");
                loader?.classList.add("hidden");
                if (submitBtn) submitBtn.disabled = false;
            }
        });
    }

    init();
    document.addEventListener("astro:page-load", init);
</script>

<style>
    .form-card {
        text-align: left;
    }

    h2 {
        text-align: center;
        font-size: var(--fs-2xl);
        font-style: italic;
        margin-bottom: var(--space-1);
    }

    .subtitle {
        text-align: center;
        font-size: var(--fs-sm);
        color: var(--white-70);
        margin-bottom: var(--space-5);
    }

    .field {
        display: block;
        margin-bottom: var(--space-4);
    }

    .label {
        display: block;
        font-size: var(--fs-sm);
        color: var(--white-90);
        margin-bottom: var(--space-2);
    }

    /* Radio buttons - consistent with global buttons */
    .radio-group {
        display: flex;
        gap: var(--space-2);
    }

    .radio {
        flex: 1;
        cursor: pointer;
    }

    .radio input {
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }

    .radio-btn {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 44px;
        padding: var(--space-3);
        font-size: var(--fs-sm);
        font-weight: 500;
        color: var(--white);
        background: var(--white-10);
        border: 1px solid var(--white-20);
        border-radius: var(--radius-sm);
        transition: all var(--duration) var(--ease);
    }

    .radio:active .radio-btn {
        transform: scale(0.98);
    }

    .radio input:checked + .yes {
        background: var(--success);
        border-color: var(--success);
    }

    .radio input:checked + .no {
        background: var(--error);
        border-color: var(--error);
    }

    /* Guests expandable */
    .guests-wrap {
        display: grid;
        grid-template-rows: 0fr;
        transition: grid-template-rows 0.2s var(--ease);
    }

    .guests-wrap.show {
        grid-template-rows: 1fr;
    }

    .guests-wrap > * {
        overflow: hidden;
    }

    .error {
        text-align: center;
        color: #f99;
        font-size: var(--fs-sm);
        margin-top: var(--space-3);
    }

    /* Loader */
    .loader {
        position: fixed;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: rgba(75, 1, 1, 0.96);
        z-index: 999;
        opacity: 1;
        transition: opacity var(--duration) var(--ease);
    }

    .loader.hidden {
        opacity: 0;
        pointer-events: none;
    }

    .spinner {
        width: 1.75rem;
        height: 1.75rem;
        border: 2px solid var(--white-20);
        border-top-color: var(--white);
        border-radius: 50%;
        animation: spin 0.5s linear infinite;
        margin-bottom: var(--space-3);
    }

    .checkmark {
        width: 2rem;
        height: 2rem;
        color: #4ade80;
        margin-bottom: var(--space-3);
        display: none;
    }

    .loader.done .spinner {
        display: none;
    }
    .loader.done .checkmark {
        display: block;
    }

    @keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }
</style>
