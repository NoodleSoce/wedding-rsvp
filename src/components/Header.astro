---
import { getImage } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
  showAnimation?: boolean;
}

const { lang = "en", showAnimation = false } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";

// Pre-optimize the logo image at build time
const optimizedLogo = await getImage({
  src: logoImg,
  width: 400,
  height: 133,
  format: "webp",
});
---

<header
  class="header"
  id="site-header"
  data-animate={showAnimation ? "true" : "false"}
  style="position:absolute;top:0;left:0;right:0;padding:1rem;z-index:100;pointer-events:none;"
>
  <div
    class="inner"
    style="max-width:600px;margin:0 auto;display:flex;justify-content:center;align-items:center;pointer-events:auto;direction:ltr;position:relative;padding:0 1rem;"
  >
    <div
      class="logo-wrap"
      style="display:flex;justify-content:center;align-items:center;height:72px;width:217px;"
    >
      <!-- Use regular img with inline styles to prevent any flash -->
      <img
        src={optimizedLogo.src}
        alt="Z & H"
        width="217"
        height="72"
        class="logo"
        style="height:72px;width:217px;object-fit:contain;display:block;"
        fetchpriority="high"
        decoding="sync"
      />
    </div>
    <a
      href={targetPath}
      class:list={["lang-btn", { arabic: lang === "en" }]}
      data-astro-prefetch
      aria-label={lang === "en" ? "Switch to Arabic" : "Switch to English"}
      style="position:absolute;right:0;top:50%;transform:translateY(-50%);width:44px;height:44px;display:flex;justify-content:center;align-items:center;font-size:0.875rem;font-weight:600;color:#fff;background:rgba(255,255,255,0.1);border:1px solid rgba(255,255,255,0.2);border-radius:50%;text-decoration:none;pointer-events:auto;-webkit-tap-highlight-color:transparent;"
    >
      {lang === "en" ? "Ø¹" : "EN"}
    </a>
  </div>
</header>

<script>
  // Handle language preference on click
  document.addEventListener(
    "click",
    (e) => {
      const btn = (e.target as HTMLElement).closest(".lang-btn");
      if (btn) {
        localStorage.setItem(
          "preferred_lang",
          btn.classList.contains("arabic") ? "ar" : "en",
        );
      }
    },
    { passive: true },
  );

  // Handle animation on first load only
  function initHeaderAnimation() {
    const header = document.getElementById("site-header");
    if (!header) return;

    if (header.dataset.animate === "true" && !header.dataset.animated) {
      header.classList.add("animated");
      header.dataset.animated = "true";
    }
  }

  initHeaderAnimation();
  document.addEventListener("astro:page-load", initHeaderAnimation);
</script>

<style>
  /* Responsive adjustments only - base styles are inline */
  @media (min-width: 400px) {
    .logo-wrap {
      height: 80px !important;
      width: 241px !important;
    }
    .logo {
      height: 80px !important;
      width: 241px !important;
    }
  }

  @media (min-width: 600px) {
    .logo-wrap {
      height: 88px !important;
      width: 265px !important;
    }
    .logo {
      height: 88px !important;
      width: 265px !important;
    }
  }

  @media (orientation: landscape) and (max-height: 500px) {
    .logo-wrap {
      height: 52px !important;
      width: 156px !important;
    }
    .logo {
      height: 52px !important;
      width: 156px !important;
    }
    .header {
      padding: 0.75rem 1rem !important;
    }
  }

  /* Lang button fonts - can't be inline due to font-family */
  .lang-btn {
    font-family: "Libre Baskerville", Georgia, serif;
    touch-action: manipulation;
    transition: background 0.12s ease;
  }

  .lang-btn.arabic {
    font-family: "Amiri", Georgia, serif;
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1;
    padding-top: 2px;
  }

  .lang-btn:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .lang-btn:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  /* Animation ONLY when .animated class is added via JS */
  .header.animated .logo-wrap {
    animation: fadeSlideDown 0.35s ease-out both;
  }

  .header.animated .lang-btn {
    animation: fadeSlideDownBtn 0.35s ease-out 0.1s both;
  }

  @keyframes fadeSlideDown {
    from {
      opacity: 0;
      transform: translateY(-12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeSlideDownBtn {
    from {
      opacity: 0;
      transform: translateY(calc(-50% - 12px));
    }
    to {
      opacity: 1;
      transform: translateY(-50%);
    }
  }
</style>
