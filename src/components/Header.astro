---
import { getImage } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
  showAnimation?: boolean;
}

const { lang = "en", showAnimation = false } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";

const optimizedLogo = await getImage({
  src: logoImg,
  width: 400,
  height: 133,
  format: "webp",
});
const buttonText = lang === "en" ? "Ø¹" : "EN";
const isArabicButton = lang === "en";
---

<!-- 
  When showAnimation is true: header starts hidden, JS adds .animated class to trigger fade-in
  When showAnimation is false: header is visible immediately, no animation
-->
<header
  class:list={["hdr", { "hdr-will-animate": showAnimation }]}
  id="site-header"
  data-animate={showAnimation ? "true" : "false"}
>
  <div class="hdr-inner">
    <div class="logo-box">
      <img
        src={optimizedLogo.src}
        alt="Z & H"
        fetchpriority="high"
        decoding="sync"
      />
    </div>
    <a
      href={targetPath}
      class:list={["lang-box", { "is-ar": isArabicButton }]}
      data-astro-prefetch
      aria-label={lang === "en" ? "Switch to Arabic" : "Switch to English"}
    >
      {buttonText}
    </a>
  </div>
</header>

<script>
  document.addEventListener(
    "click",
    (e) => {
      const btn = (e.target as HTMLElement).closest(".lang-box");
      if (btn) {
        localStorage.setItem(
          "preferred_lang",
          btn.classList.contains("is-ar") ? "ar" : "en",
        );
      }
    },
    { passive: true },
  );

  function initHeaderAnimation() {
    const header = document.getElementById("site-header");
    if (!header) return;
    if (header.dataset.animate === "true" && !header.dataset.animated) {
      // Small delay to ensure styles are applied, then animate
      requestAnimationFrame(() => {
        header.classList.add("animated");
        header.dataset.animated = "true";
      });
    }
  }

  initHeaderAnimation();
  document.addEventListener("astro:page-load", initHeaderAnimation);
</script>

<style>
  .hdr {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    z-index: 100;
    pointer-events: none;
  }

  /* When animation is expected, START HIDDEN */
  .hdr-will-animate .logo-box,
  .hdr-will-animate .lang-box {
    opacity: 0;
    visibility: hidden;
  }

  .hdr-inner {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    direction: ltr;
    position: relative;
    padding: 0 1rem;
  }

  .lang-box {
    transition: background 0.12s ease;
    pointer-events: auto;
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  .lang-box:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .lang-box:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  @media (orientation: landscape) and (max-height: 500px) {
    .hdr {
      padding: 0.75rem 1rem;
    }
  }

  /* Animation: from hidden to visible */
  .hdr.animated .logo-box {
    opacity: 1;
    visibility: visible;
    animation: fadeSlideDown 0.35s ease-out both;
  }

  .hdr.animated .lang-box {
    opacity: 1;
    visibility: visible;
    animation: fadeSlideDownBtn 0.35s ease-out 0.1s both;
  }

  @keyframes fadeSlideDown {
    from {
      opacity: 0;
      transform: translateY(-12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeSlideDownBtn {
    from {
      opacity: 0;
      transform: translateY(calc(-50% - 12px));
    }
    to {
      opacity: 1;
      transform: translateY(-50%);
    }
  }
</style>
