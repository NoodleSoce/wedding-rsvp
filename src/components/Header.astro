---
import { Image } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
  showAnimation?: boolean;
}

const { lang = "en", showAnimation = false } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";
---

<header class:list={["header", { animated: showAnimation }]}>
  <div class="inner">
    <div class="logo-wrap">
      <Image
        src={logoImg}
        alt="Z & H"
        class="logo"
        width={400}
        height={133}
        loading="eager"
      />
    </div>
    <a
      href={targetPath}
      class="lang-btn"
      data-astro-prefetch
      onclick="localStorage.setItem('preferred_lang', this.textContent.trim() === 'AR' ? 'ar' : 'en')"
    >
      {lang === "en" ? "AR" : "EN"}
    </a>
  </div>
</header>

<style>
  .header {
    position: absolute;
    inset: 0 0 auto 0;
    padding: 1rem;
    z-index: 100;
    pointer-events: none;
  }

  .inner {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    direction: ltr;
  }

  .logo-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .logo {
    height: 64px;
    width: auto;
  }

  @media (min-width: 400px) {
    .logo {
      height: 72px;
    }
  }

  @media (min-width: 600px) {
    .logo {
      height: 80px;
    }
  }

  .lang-btn {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    min-height: 40px;
    min-width: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem 0.875rem;
    font-family: "Libre Baskerville", "Amiri", Georgia, serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    text-decoration: none;
    transition: background 0.15s ease;
  }

  .lang-btn:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .lang-btn:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  /* Animation only on landing page */
  .header.animated .logo-wrap {
    animation: fadeSlideDown 0.5s ease both;
  }

  .header.animated .lang-btn {
    animation: fadeSlideDown 0.5s ease both;
    animation-delay: 0.15s;
  }

  @keyframes fadeSlideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Fix lang-btn transform after animation */
  .header.animated .lang-btn {
    transform: translateY(-50%);
  }

  @keyframes fadeSlideDownBtn {
    from {
      opacity: 0;
      transform: translateY(calc(-50% - 10px));
    }
    to {
      opacity: 1;
      transform: translateY(-50%);
    }
  }

  .header.animated .lang-btn {
    animation-name: fadeSlideDownBtn;
  }
</style>
