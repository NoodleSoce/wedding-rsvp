---
import { getImage } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
}

const { lang = "en" } = Astro.props;
const path = Astro.url.pathname;

const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";

const logo = await getImage({
  src: logoImg,
  width: 400,
  height: 133,
  format: "avif",
  quality: 85,
});

const buttonText = lang === "en" ? "Ø¹" : "EN";
const isArabicBtn = lang === "en";
---

<header class="header">
  <div class="header-inner">
    <a href={lang === "ar" ? "/ar" : "/"} class="logo" aria-label="Home">
      <img
        src={logo.src}
        alt="Zaid & Haya"
        fetchpriority="high"
        decoding="async"
      />
    </a>

    <a
      href={targetPath}
      class:list={["lang-btn", { "lang-btn-ar": isArabicBtn }]}
      data-astro-prefetch
      aria-label={lang === "en" ? "Switch to Arabic" : "Switch to English"}
    >
      {buttonText}
    </a>
  </div>
</header>

<script>
  document.addEventListener(
    "click",
    (e) => {
      const btn = (e.target as HTMLElement).closest(".lang-btn");
      if (btn) {
        localStorage.setItem(
          "preferred_lang",
          btn.classList.contains("lang-btn-ar") ? "ar" : "en",
        );
      }
    },
    { passive: true },
  );
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1rem;
    pointer-events: none;
  }

  .header-inner {
    max-width: 500px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 0 3rem;
  }

  .logo {
    pointer-events: auto;
    display: block;
    animation: fadeDown 0.4s ease-out both;
  }

  /* LARGER logo on mobile */
  .logo img {
    display: block;
    width: 200px;
    height: 67px;
    object-fit: contain;
  }

  @media (min-width: 400px) {
    .logo img {
      width: 220px;
      height: 73px;
    }
  }

  @media (min-width: 600px) {
    .logo img {
      width: 240px;
      height: 80px;
    }
  }

  /* Landscape phones - smaller */
  @media (orientation: landscape) and (max-height: 500px) {
    .logo img {
      width: 150px;
      height: 50px;
    }
    .header {
      padding: 0.75rem 1rem;
    }
  }

  .lang-btn {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);

    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;

    font-family: "Libre Baskerville", serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
    text-decoration: none;

    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;

    pointer-events: auto;
    transition: background 0.15s;
    animation: fadeDownBtn 0.4s ease-out 0.1s both;
  }

  .lang-btn-ar {
    font-family: "Amiri", serif;
    font-size: 1.2rem;
    font-weight: 400;
    padding-top: 2px;
  }

  .lang-btn:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .lang-btn:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeDownBtn {
    from {
      opacity: 0;
      transform: translateY(calc(-50% - 10px));
    }
    to {
      opacity: 1;
      transform: translateY(-50%);
    }
  }
</style>
