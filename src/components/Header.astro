---
import { Image } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
}

const { lang = "en" } = Astro.props;
const currentPath = Astro.url.pathname;

// Calculate language switch path
const targetPath =
  lang === "en"
    ? currentPath === "/"
      ? "/ar"
      : `/ar${currentPath}`
    : currentPath.replace("/ar", "") || "/";
const label = lang === "en" ? "AR" : "EN";
---

<header class="header">
  <div class="header-inner">
    <Image
      src={logoImg}
      alt="Zaid & Haya"
      class="logo"
      width={300}
      height={100}
      loading="eager"
    />
    <a href={targetPath} class="lang-btn" data-astro-prefetch>
      {label}
    </a>
  </div>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const btn = document.querySelector(".lang-btn");
    btn?.addEventListener("click", () => {
      const lang = btn.textContent?.trim() === "AR" ? "ar" : "en";
      localStorage.setItem("preferred_lang", lang);
    });
  });
</script>

<style>
  .header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: var(--s-6) var(--s-4) var(--s-4);
    z-index: 100;
    pointer-events: none;
  }

  .header-inner {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    direction: ltr;
  }

  .logo {
    height: 80px;
    width: auto;
  }

  .lang-btn {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    padding: var(--s-1) var(--s-3);
    font-family: var(--font);
    font-size: var(--fs-sm);
    font-weight: 500;
    color: var(--c-white);
    background: var(--c-white-10);
    border: 1px solid var(--c-white-20);
    border-radius: var(--radius-full);
    backdrop-filter: blur(4px);
    transition:
      background var(--transition),
      border-color var(--transition);
  }

  .lang-btn:hover {
    background: var(--c-white-20);
    border-color: var(--c-white-50);
  }
</style>
