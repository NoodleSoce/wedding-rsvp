---
import { Image } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
}

const { lang = "en" } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";
---

<header class="header">
  <div class="inner">
    <Image
      src={logoImg}
      alt="Z & H"
      class="logo"
      width={320}
      height={107}
      loading="eager"
    />
    <a
      href={targetPath}
      class="lang-btn"
      data-astro-prefetch
      onclick="localStorage.setItem('preferred_lang', this.textContent.trim() === 'AR' ? 'ar' : 'en')"
    >
      {lang === "en" ? "AR" : "EN"}
    </a>
  </div>
</header>

<style>
  .header {
    position: absolute;
    inset: 0 0 auto 0;
    padding: var(--space-5) var(--page-pad);
    z-index: 100;
    pointer-events: none;
  }

  .inner {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    direction: ltr;
  }

  /* BIGGER logo for mobile app feel */
  .logo {
    height: clamp(56px, 48px + 2vw, 76px);
    width: auto;
  }

  .lang-btn {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    min-height: 40px;
    min-width: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--space-2) var(--space-4);
    font: 600 var(--fs-sm) var(--font);
    color: var(--white);
    background: var(--white-10);
    border: 1px solid var(--white-20);
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: background var(--duration) var(--ease);
  }

  .lang-btn:active {
    background: var(--white-20);
  }

  @media (hover: hover) {
    .lang-btn:hover {
      background: var(--white-20);
    }
  }
</style>
