---
import { Image } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
  showAnimation?: boolean;
}

const { lang = "en", showAnimation = false } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";
---

<header class:list={["header", { animated: showAnimation }]}>
  <div class="inner">
    <div class="logo-wrap">
      <Image
        src={logoImg}
        alt="Z & H"
        class="logo"
        width={400}
        height={133}
        loading="eager"
      />
    </div>
    <a
      href={targetPath}
      class="lang-btn"
      data-astro-prefetch
      onclick="localStorage.setItem('preferred_lang', this.textContent.trim() === 'AR' ? 'ar' : 'en')"
    >
      {lang === "en" ? "AR" : "EN"}
    </a>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    z-index: 100;
    pointer-events: none;
  }

  .inner {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    direction: ltr;
  }

  .logo-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .logo {
    height: 60px;
    width: auto;
  }

  @media (min-width: 400px) {
    .logo {
      height: 68px;
    }
  }

  @media (min-width: 600px) {
    .logo {
      height: 76px;
    }
  }

  @media (orientation: landscape) and (max-height: 500px) {
    .logo {
      height: 48px;
    }
    .header {
      padding: 0.75rem 1rem;
    }
  }

  /* Language button - always top right, centered with logo */
  .lang-btn {
    position: fixed;
    top: 1rem;
    right: 1rem;
    min-height: 40px;
    min-width: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem 0.875rem;
    font-family: "Libre Baskerville", "Amiri", Georgia, serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 100px;
    text-decoration: none;
    transition: background 0.15s ease;
    pointer-events: auto;
  }

  /* Adjust for logo height */
  @media (min-width: 400px) {
    .lang-btn {
      top: 1rem;
    }
  }

  @media (orientation: landscape) and (max-height: 500px) {
    .lang-btn {
      top: 0.75rem;
      right: 0.75rem;
    }
  }

  .lang-btn:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .lang-btn:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  /* Animation only on landing page */
  .header.animated .logo-wrap {
    animation: fadeSlideDown 0.5s ease both;
  }

  .header.animated .lang-btn {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
    animation-delay: 0.15s;
  }

  @keyframes fadeSlideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
