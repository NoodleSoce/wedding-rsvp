---
import { Image } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
  showAnimation?: boolean;
}

const { lang = "en", showAnimation = false } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";
---

<header class:list={["header", { animated: showAnimation }]}>
  <div class="inner">
    <div class="logo-wrap">
      <Image
        src={logoImg}
        alt="Z & H"
        class="logo"
        width={400}
        height={133}
        loading="eager"
        decoding="async"
      />
    </div>
    <a
      href={targetPath}
      class:list={["lang-btn", { arabic: lang === "en" }]}
      data-astro-prefetch
      aria-label={lang === "en" ? "Switch to Arabic" : "Switch to English"}
    >
      {lang === "en" ? "Ø¹" : "EN"}
    </a>
  </div>
</header>

<script>
  // Handle language preference on click - passive event
  document.addEventListener(
    "click",
    (e) => {
      const btn = (e.target as HTMLElement).closest(".lang-btn");
      if (btn) {
        localStorage.setItem(
          "preferred_lang",
          btn.classList.contains("arabic") ? "ar" : "en",
        );
      }
    },
    { passive: true },
  );
</script>

<style>
  .header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    z-index: 100;
    pointer-events: none;
    /* Promote to GPU layer */
    transform: translateZ(0);
    contain: layout style;
  }

  .inner {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    direction: ltr;
    position: relative;
    padding: 0 1rem;
  }

  .logo-wrap {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .logo {
    height: 72px;
    width: auto;
    /* Content visibility for off-screen optimization */
    contain: layout;
  }

  @media (min-width: 400px) {
    .logo {
      height: 80px;
    }
  }

  @media (min-width: 600px) {
    .logo {
      height: 88px;
    }
  }

  @media (orientation: landscape) and (max-height: 500px) {
    .logo {
      height: 52px;
    }
    .header {
      padding: 0.75rem 1rem;
    }
  }

  .lang-btn {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%) translateZ(0);
    width: 44px;
    height: 44px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: "Libre Baskerville", Georgia, serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    text-decoration: none;
    transition: background 0.15s ease;
    pointer-events: auto;
    /* Optimize touch */
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  .lang-btn.arabic {
    font-family: "Amiri", Georgia, serif;
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1;
    padding-top: 2px;
  }

  .lang-btn:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .lang-btn:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  /* Animation - GPU accelerated */
  .header.animated .logo-wrap {
    animation: fadeSlideDown 0.4s ease both;
    will-change: opacity, transform;
  }

  .header.animated .lang-btn {
    animation: fadeSlideDownBtn 0.4s ease both;
    animation-delay: 0.1s;
    will-change: opacity, transform;
  }

  @keyframes fadeSlideDown {
    from {
      opacity: 0;
      transform: translate3d(0, -10px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  @keyframes fadeSlideDownBtn {
    from {
      opacity: 0;
      transform: translate3d(0, calc(-50% - 10px), 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, -50%, 0);
    }
  }
</style>
