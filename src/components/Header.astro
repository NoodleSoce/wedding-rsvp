---
import { getImage } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
}

const { lang = "en" } = Astro.props;
const path = Astro.url.pathname;

// Toggle language path
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";

// Optimized logo
const logo = await getImage({
  src: logoImg,
  width: 360,
  height: 120,
  format: "avif",
  quality: 85,
});

const buttonText = lang === "en" ? "Ø¹" : "EN";
const isArabicBtn = lang === "en";
---

<header class="header">
  <div class="header-inner">
    <a href={lang === "ar" ? "/ar" : "/"} class="logo" aria-label="Home">
      <img
        src={logo.src}
        alt="Zaid & Haya"
        width="180"
        height="60"
        fetchpriority="high"
        decoding="async"
      />
    </a>

    <a
      href={targetPath}
      class="lang-btn"
      class:list={{ "lang-btn-ar": isArabicBtn }}
      data-astro-prefetch
      aria-label={lang === "en" ? "Switch to Arabic" : "Switch to English"}
    >
      {buttonText}
    </a>
  </div>
</header>

<script>
  // Save language preference on click
  document.addEventListener(
    "click",
    (e) => {
      const btn = (e.target as HTMLElement).closest(".lang-btn");
      if (btn) {
        localStorage.setItem(
          "preferred_lang",
          btn.classList.contains("lang-btn-ar") ? "ar" : "en",
        );
      }
    },
    { passive: true },
  );
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1rem;
    pointer-events: none;
  }

  .header-inner {
    max-width: 500px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .logo {
    pointer-events: auto;
    display: block;
    animation: fadeIn 0.4s ease-out both;
  }

  .logo img {
    display: block;
    height: auto;
    width: clamp(140px, 35vw, 180px);
  }

  .lang-btn {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);

    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;

    font-family: "Libre Baskerville", serif;
    font-size: 0.8rem;
    font-weight: 600;
    color: #fff;
    text-decoration: none;

    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;

    pointer-events: auto;
    transition: background 0.15s;
    animation: fadeIn 0.4s ease-out 0.1s both;
  }

  .lang-btn-ar {
    font-family: "Amiri", serif;
    font-size: 1.1rem;
    font-weight: 400;
  }

  .lang-btn:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .lang-btn:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(-50%);
    }
  }

  .logo {
    animation: fadeInLogo 0.4s ease-out both;
  }

  @keyframes fadeInLogo {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
