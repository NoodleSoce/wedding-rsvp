---
import { getImage } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
  isLanding?: boolean;
}

const { lang = "en", isLanding = false } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";

const logo = await getImage({
  src: logoImg,
  width: 600,
  format: "avif",
  quality: 90,
});

const buttonText = lang === "en" ? "Ø¹" : "EN";
const isArabicBtn = lang === "en";
---

<header class:list={["header", { "header-animate": isLanding }]}>
  <!-- Logo Container -->
  <a href={lang === "ar" ? "/ar" : "/"} class="logo-link" aria-label="Home">
    <img
      src={logo.src}
      alt="Zaid & Haya"
      class="logo-img"
      width="220"
      height="73"
      decoding="sync"
      loading="eager"
      fetchpriority="high"
    />
  </a>

  <!-- Language Button - Positioned absolutely relative to header, ignoring inner width -->
  <a
    href={targetPath}
    class:list={["lang-btn", { "lang-btn-ar": isArabicBtn }]}
    data-astro-prefetch
    aria-label={lang === "en" ? "Switch to Arabic" : "Switch to English"}
  >
    {buttonText}
  </a>
</header>

<script>
  document.addEventListener(
    "click",
    (e) => {
      const btn = (e.target as HTMLElement).closest(".lang-btn");
      if (btn) {
        localStorage.setItem(
          "preferred_lang",
          btn.classList.contains("lang-btn-ar") ? "ar" : "en",
        );
      }
    },
    { passive: true },
  );
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    height: 100px; /* Explicit height */
    pointer-events: none;
    transform: translateZ(0);
    /* Ensure consistent box model */
    box-sizing: border-box;
  }

  /* Logo - Centered Absolutely */
  .logo-link {
    pointer-events: auto;
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    /* Strict Base Dimensions */
    width: 220px;
    height: 73px;
    z-index: 2;
  }

  /* Logo Image - Strict Pixel Sizing to Prevent Flash */
  .logo-img {
    display: block;
    width: 220px; /* Pixel value, NOT PERCENTAGE */
    height: 73px;
    object-fit: contain;
    image-rendering: -webkit-optimize-contrast;
  }

  /* Language Button - Fixed to corner */
  .lang-btn {
    pointer-events: auto;
    position: absolute;
    right: 1.5rem; /* Fixed distance from screen edge */
    top: 50%;
    transform: translateY(-50%);
    z-index: 3;

    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;

    font-family: "Libre Baskerville", serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
    text-decoration: none;

    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;

    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  .lang-btn-ar {
    font-family: "Amiri", serif;
    font-size: 1.2rem;
    font-weight: 400;
    padding-top: 2px;
  }

  /* =========================================
       RESPONSIVE SIZING
       ========================================= */

  /* Small screens (> 400px) */
  @media (min-width: 400px) {
    .logo-link,
    .logo-img {
      width: 240px;
      height: 80px;
    }
  }

  /* Desktops (> 600px) */
  @media (min-width: 600px) {
    .logo-link,
    .logo-img {
      width: 260px;
      height: 87px;
    }
  }

  /* LANDSCAPE MOBILE FIX */
  @media (orientation: landscape) and (max-height: 500px) {
    .header {
      /* Scroll away with content in landscape */
      position: absolute;
      height: 70px;
    }

    .logo-link,
    .logo-img {
      width: 160px;
      height: 53px;
    }

    .lang-btn {
      right: 2rem; /* More space on sides in landscape */
    }
  }

  /* Animation */
  .header-animate .logo-link {
    animation: fadeDown 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) both;
  }
  .header-animate .lang-btn {
    animation: fadeDownBtn 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) 0.1s both;
  }

  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translate(-50%, calc(-50% - 12px));
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%);
    }
  }
  @keyframes fadeDownBtn {
    from {
      opacity: 0;
      transform: translateY(calc(-50% - 12px));
    }
    to {
      opacity: 1;
      transform: translateY(-50%);
    }
  }
</style>
