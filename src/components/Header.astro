---
import { getImage } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
  isLanding?: boolean;
}

const { lang = "en", isLanding = false } = Astro.props;
const path = Astro.url.pathname;

const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";

const logo = await getImage({
  src: logoImg,
  width: 600,
  format: "avif",
  quality: 90,
});

const buttonText = lang === "en" ? "Ø¹" : "EN";
const isArabicBtn = lang === "en";
---

<header class:list={["header", { "header-animate": isLanding }]}>
  <div class="header-inner">
    <!-- Logo centered absolutely -->
    <a href={lang === "ar" ? "/ar" : "/"} class="logo-link" aria-label="Home">
      <img
        src={logo.src}
        alt="Zaid & Haya"
        width="220"
        height="73"
        loading="eager"
        fetchpriority="high"
        decoding="sync"
        class="logo-img"
      />
    </a>

    <!-- Language button absolute right with symmetric spacing -->
    <a
      href={targetPath}
      class:list={["lang-btn", { "lang-btn-ar": isArabicBtn }]}
      data-astro-prefetch
      aria-label={lang === "en" ? "Switch to Arabic" : "Switch to English"}
    >
      {buttonText}
    </a>
  </div>
</header>

<script>
  document.addEventListener(
    "click",
    (e) => {
      const btn = (e.target as HTMLElement).closest(".lang-btn");
      if (btn) {
        localStorage.setItem(
          "preferred_lang",
          btn.classList.contains("lang-btn-ar") ? "ar" : "en",
        );
      }
    },
    { passive: true },
  );
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1rem;
    pointer-events: none;
    transform: translateZ(0);
    /* Ensure spacing exists even before CSS loads fully to prevent shift */
    height: 100px;
  }

  .header-inner {
    max-width: 500px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    /* Padding ensures language button isn't too close to edge on small screens */
    padding: 0 1rem;
    height: 100%;
  }

  .logo-link {
    pointer-events: auto;
    display: block;
    /* Strict dimensions to prevent flash */
    width: 220px;
    height: 73px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  .logo-img {
    display: block;
    /* Force exact dimensions */
    width: 100% !important;
    height: 100% !important;
    object-fit: contain;
    image-rendering: -webkit-optimize-contrast;
  }

  /* Responsive Sizing */
  @media (min-width: 400px) {
    .logo-link {
      width: 240px;
      height: 80px;
    }
  }
  @media (min-width: 600px) {
    .logo-link {
      width: 260px;
      height: 87px;
    }
  }
  @media (orientation: landscape) and (max-height: 500px) {
    .logo-link {
      width: 160px;
      height: 53px;
    }
    .header {
      padding: 0.5rem 1rem;
      height: 70px;
    }
  }

  .lang-btn {
    pointer-events: auto;
    position: absolute;
    /* Symmetric spacing: Right aligned with same padding as container would have */
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);

    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;

    font-family: "Libre Baskerville", serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
    text-decoration: none;

    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;

    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    transition: background 0.15s;
  }

  .lang-btn-ar {
    font-family: "Amiri", serif;
    font-size: 1.2rem;
    font-weight: 400;
    padding-top: 2px;
  }

  .lang-btn:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .lang-btn:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  /* Animation - Landing Only */
  .header-animate .logo-link {
    animation: fadeDown 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) both;
  }

  .header-animate .lang-btn {
    animation: fadeDownBtn 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) 0.1s both;
  }

  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translate(-50%, calc(-50% - 12px));
    }
    to {
      opacity: 1;
      transform: translate(-50%, -50%);
    }
  }

  @keyframes fadeDownBtn {
    from {
      opacity: 0;
      transform: translateY(calc(-50% - 12px));
    }
    to {
      opacity: 1;
      transform: translateY(-50%);
    }
  }
</style>
