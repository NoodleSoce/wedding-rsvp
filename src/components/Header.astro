---
import { getImage } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
  showAnimation?: boolean;
}

const { lang = "en", showAnimation = false } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";

// Pre-optimize the logo image at build time
const optimizedLogo = await getImage({
  src: logoImg,
  width: 400,
  height: 133,
  format: "webp",
});

// Determine button text and class based on current language
const buttonText = lang === "en" ? "Ø¹" : "EN";
const isArabicButton = lang === "en"; // Shows Arabic letter when on English page
---

<header
  class="header"
  id="site-header"
  data-animate={showAnimation ? "true" : "false"}
>
  <div class="header-inner">
    <div class="header-logo-wrap">
      <img
        src={optimizedLogo.src}
        alt="Z & H"
        width="217"
        height="72"
        class="header-logo"
        fetchpriority="high"
        decoding="sync"
      />
    </div>
    <a
      href={targetPath}
      class:list={["header-lang", { "header-lang-ar": isArabicButton }]}
      data-astro-prefetch
      aria-label={lang === "en" ? "Switch to Arabic" : "Switch to English"}
    >
      {buttonText}
    </a>
  </div>
</header>

<script>
  // Handle language preference on click
  document.addEventListener(
    "click",
    (e) => {
      const btn = (e.target as HTMLElement).closest(".header-lang");
      if (btn) {
        const isArabic = btn.classList.contains("header-lang-ar");
        localStorage.setItem("preferred_lang", isArabic ? "ar" : "en");
      }
    },
    { passive: true },
  );

  // Handle animation on first load only
  function initHeaderAnimation() {
    const header = document.getElementById("site-header");
    if (!header) return;

    if (header.dataset.animate === "true" && !header.dataset.animated) {
      header.classList.add("animated");
      header.dataset.animated = "true";
    }
  }

  initHeaderAnimation();
  document.addEventListener("astro:page-load", initHeaderAnimation);
</script>

<style>
  .header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    z-index: 100;
    pointer-events: none;
  }

  .header-inner {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    direction: ltr;
    position: relative;
    padding: 0 1rem;
  }

  /* Logo dimensions are set in Layout.astro critical CSS */

  .header-lang {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    transition: background 0.12s ease;
    pointer-events: auto;
    touch-action: manipulation;
    -webkit-tap-highlight-color: transparent;
  }

  .header-lang:active {
    background: rgba(255, 255, 255, 0.2);
  }

  @media (hover: hover) {
    .header-lang:hover {
      background: rgba(255, 255, 255, 0.2);
    }
  }

  @media (orientation: landscape) and (max-height: 500px) {
    .header {
      padding: 0.75rem 1rem;
    }
  }

  /* Animation ONLY when .animated class is added via JS */
  .header.animated .header-logo-wrap {
    animation: fadeSlideDown 0.35s ease-out both;
  }

  .header.animated .header-lang {
    animation: fadeSlideDownBtn 0.35s ease-out 0.1s both;
  }

  @keyframes fadeSlideDown {
    from {
      opacity: 0;
      transform: translateY(-12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeSlideDownBtn {
    from {
      opacity: 0;
      transform: translateY(calc(-50% - 12px));
    }
    to {
      opacity: 1;
      transform: translateY(-50%);
    }
  }
</style>
