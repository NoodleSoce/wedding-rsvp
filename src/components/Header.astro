---
import { Image } from "astro:assets";
import logoImg from "../assets/logo.webp";

interface Props {
  lang?: "en" | "ar";
}

const { lang = "en" } = Astro.props;
const path = Astro.url.pathname;
const targetPath =
  lang === "en"
    ? path === "/"
      ? "/ar"
      : `/ar${path}`
    : path.replace("/ar", "") || "/";
---

<header class="header">
  <div class="inner">
    <Image
      src={logoImg}
      alt="Z & H"
      class="logo"
      width={280}
      height={93}
      loading="eager"
    />
    <a
      href={targetPath}
      class="lang"
      data-astro-prefetch
      onclick="localStorage.setItem('preferred_lang', this.textContent.trim() === 'AR' ? 'ar' : 'en')"
    >
      {lang === "en" ? "AR" : "EN"}
    </a>
  </div>
</header>

<style>
  .header {
    position: absolute;
    inset: 0 0 auto 0;
    padding: 1rem;
    z-index: 100;
    pointer-events: none;
  }

  .inner {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: auto;
    direction: ltr;
  }

  .logo {
    height: 56px;
    width: auto;
  }

  .lang {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    padding: 0.375rem 0.75rem;
    font: 500 var(--fs-sm) var(--font);
    color: var(--c-white);
    background: var(--c-white-10);
    border: 1px solid var(--c-white-20);
    border-radius: 999px;
    text-decoration: none;
    transition: background 0.15s var(--ease);
  }

  .lang:active {
    background: var(--c-white-20);
  }

  @media (hover: hover) {
    .lang:hover {
      background: var(--c-white-20);
    }
  }
</style>
