---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImg from "../assets/hero-image.webp";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const rsvpLink = lang === "ar" ? "/ar/rsvp" : "/rsvp";
---

<Layout
    title={lang === "ar" ? "الرئيسية" : "Welcome"}
    lang={lang}
    isLanding={true}
>
    <main class="page">
        <div class="content">
            <h1 class="title animate-in">
                {t["index.title"]}
            </h1>

            <p class="subtitle animate-in delay-1">
                {t["index.subtitle"]}
            </p>

            <figure class="hero animate-in delay-2">
                <Image
                    src={heroImg}
                    alt="Zaid & Haya"
                    width={500}
                    height={500}
                    format="avif"
                    quality={80}
                    loading="eager"
                    fetchpriority="high"
                    class="hero-img"
                />
            </figure>

            <a
                href={rsvpLink}
                class="btn cta animate-in delay-3"
                data-astro-prefetch
            >
                {t["index.cta"]}
            </a>
        </div>
    </main>
</Layout>

<style>
    .title {
        font-size: clamp(1.4rem, 1.2rem + 1vw, 1.9rem);
        font-style: italic;
        font-weight: 400;
        line-height: 1.4;
        max-width: 90%;
        margin: 0;
    }

    .subtitle {
        font-size: clamp(0.95rem, 0.85rem + 0.5vw, 1.1rem);
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
    }

    .hero {
        margin: 0.5rem 0;
        width: clamp(200px, 50vw, 280px);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .hero-img {
        display: block;
        width: 100%;
        height: auto;
    }

    .cta {
        width: clamp(180px, 50vw, 240px);
        font-size: 1.05rem;
    }

    /* Tablet and desktop */
    @media (min-width: 768px) {
        .content {
            gap: 1.5rem;
        }

        .hero {
            width: 300px;
        }
    }
</style>
