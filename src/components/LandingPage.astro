---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImg from "../assets/hero-image.webp";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const rsvpLink = lang === "ar" ? "/ar/rsvp" : "/rsvp";
---

<Layout
    title={lang === "ar" ? "الرئيسية" : "Welcome"}
    lang={lang}
    headerAnimation={true}
>
    <main class="page animate-fade-in">
        <div class="content landing gap-5">
            <h1
                class="title text-[clamp(1.5rem,1.25rem+1.25vw,2.25rem)] italic px-5 max-w-[95%] text-white text-center anim-delay-1 animate-slide-in"
            >
                {t["index.title"]}
            </h1>
            <p
                class="subtitle text-base text-white-70 px-6 max-w-[90%] text-center anim-delay-2 animate-slide-in"
            >
                {t["index.subtitle"]}
            </p>

            <figure
                class="hero w-[clamp(240px,60vw,320px)] my-3 rounded-card overflow-hidden shadow-card contain-layout-paint anim-delay-3 animate-slide-in"
            >
                <Image
                    src={heroImg}
                    alt="Zaid & Haya"
                    width={600}
                    densities={[1.5, 2]}
                    loading="eager"
                    fetchpriority="high"
                    decoding="async"
                    quality={85}
                    format="avif"
                    class="w-full h-auto block"
                />
            </figure>

            <a
                href={rsvpLink}
                class="btn cta w-[clamp(200px,55vw,280px)] text-lg anim-delay-4 animate-slide-in"
                data-astro-prefetch
            >
                {t["index.cta"]}
            </a>
        </div>
    </main>
</Layout>
