---
import Layout from "../layouts/Layout.astro";
import { Image, getImage } from "astro:assets";
import heroImg from "../assets/hero-image.webp";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const rsvpLink = lang === "ar" ? "/ar/rsvp" : "/rsvp";

// Pre-optimize image for LCP - Keep original aspect ratio
const optimizedHero = await getImage({
    src: heroImg,
    width: 800,
    format: "avif",
    quality: 85,
});
---

<Layout
    title={lang === "ar" ? "الرئيسية" : "Welcome"}
    lang={lang}
    isLanding={true}
>
    <main class="page">
        <div class="content">
            <h1 class="title animate-in">
                {t["index.title"]}
            </h1>

            <p class="subtitle animate-in delay-1">
                {t["index.subtitle"]}
            </p>

            <figure class="hero animate-in delay-2">
                <img
                    src={optimizedHero.src}
                    srcset={`${optimizedHero.src} 1x, ${optimizedHero.src} 2x`}
                    alt="Zaid & Haya"
                    width={optimizedHero.attributes.width}
                    height={optimizedHero.attributes.height}
                    loading="eager"
                    fetchpriority="high"
                    decoding="async"
                    class="hero-img"
                />
            </figure>

            <a
                href={rsvpLink}
                class="btn cta animate-in delay-3"
                data-astro-prefetch
            >
                {t["index.cta"]}
            </a>
        </div>
    </main>
</Layout>

<style>
    .title {
        font-size: clamp(1.4rem, 1.2rem + 1vw, 2rem);
        font-style: italic;
        font-weight: 400;
        line-height: 1.4;
        max-width: 90%;
        margin: 0;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .subtitle {
        font-size: clamp(0.95rem, 0.85rem + 0.5vw, 1.15rem);
        color: rgba(255, 255, 255, 0.8);
        margin: 0;
        text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
    }

    .hero {
        margin: 1rem 0;
        /* INCREASED SIZE but kept original aspect ratio */
        width: clamp(260px, 60vw, 340px);
        height: auto; /* Allow height to adapt */
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
        /* background: rgba(0,0,0,0.2); - Removed to avoid bg showing */
        transform: translateZ(0);
    }

    .hero-img {
        display: block;
        width: 100%;
        height: auto; /* Maintain aspect ratio */
    }

    .cta {
        width: clamp(200px, 60vw, 260px);
        font-size: 1.1rem;
        margin-top: 0.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    /* Tablet and desktop */
    @media (min-width: 768px) {
        .content {
            gap: 2rem;
        }

        .hero {
            width: 380px;
        }
    }
</style>
