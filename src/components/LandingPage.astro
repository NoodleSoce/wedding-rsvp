---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImg from "../assets/hero-image.webp";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const rsvpLink = lang === "ar" ? "/ar/rsvp" : "/rsvp";
---

<Layout title={lang === "ar" ? "الرئيسية" : "Welcome"} lang={lang}>
    <main class="page fade">
        <div class="content">
            <h1 class="anim anim-1">{t["index.title"]}</h1>
            <p class="sub anim anim-2">{t["index.subtitle"]}</p>

            <figure class="hero anim anim-3">
                <Image
                    src={heroImg}
                    alt="Zaid & Haya"
                    width={500}
                    densities={[1.5, 2]}
                    loading="eager"
                    fetchpriority="high"
                />
            </figure>

            <a href={rsvpLink} class="btn anim anim-4" data-astro-prefetch>
                {t["index.cta"]}
            </a>
        </div>
    </main>
</Layout>

<style>
    .content {
        gap: var(--gap);
    }

    h1 {
        font-size: var(--fs-2xl);
        font-style: italic;
    }

    .sub {
        font-size: var(--fs-sm);
        color: var(--c-white-70);
        margin-top: -0.25rem;
    }

    .hero {
        width: 100%;
        max-width: 200px;
        margin: var(--gap) 0;
        border-radius: var(--radius);
        overflow: hidden;
        box-shadow: var(--shadow);
    }

    @media (min-width: 400px) {
        .hero {
            max-width: 240px;
        }
    }

    .hero :global(img) {
        width: 100%;
        height: auto;
        display: block;
    }

    .btn {
        max-width: 220px;
    }

    @media (min-width: 400px) {
        .btn {
            max-width: 260px;
        }
    }

    /* Touch active state */
    .btn:active {
        transform: scale(0.98);
    }
</style>
