---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImg from "../assets/hero-image.webp";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const rsvpLink = lang === "ar" ? "/ar/rsvp" : "/rsvp";
---

<Layout
    title={lang === "ar" ? "الرئيسية" : "Welcome"}
    lang={lang}
    headerAnimation={true}
>
    <main class="page fade">
        <div class="content landing">
            <h1 class="title anim anim-1">{t["index.title"]}</h1>
            <p class="subtitle anim anim-2">{t["index.subtitle"]}</p>

            <figure class="hero anim anim-3">
                <Image
                    src={heroImg}
                    alt="Zaid & Haya"
                    width={600}
                    densities={[1.5, 2]}
                    loading="eager"
                    fetchpriority="high"
                />
            </figure>

            <a href={rsvpLink} class="btn cta anim anim-4" data-astro-prefetch>
                {t["index.cta"]}
            </a>
        </div>
    </main>
</Layout>

<style>
    .landing {
        gap: var(--space-5);
    }

    .title {
        font-size: clamp(1.5rem, 1.25rem + 1.25vw, 2.25rem);
        font-style: italic;
        padding: 0 var(--space-5);
        max-width: 95%;
    }

    .subtitle {
        font-size: var(--fs-base);
        color: var(--white-70);
        padding: 0 var(--space-6);
        max-width: 90%;
    }

    /* Slightly bigger hero image */
    .hero {
        width: clamp(220px, 55vw, 300px);
        margin: var(--space-3) 0;
        border-radius: var(--radius);
        overflow: hidden;
        box-shadow: var(--shadow);
    }

    .hero :global(img) {
        width: 100%;
        height: auto;
        display: block;
    }

    .cta {
        width: clamp(200px, 55vw, 280px);
        font-size: var(--fs-lg);
    }
</style>
