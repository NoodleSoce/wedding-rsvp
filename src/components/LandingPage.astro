---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImg from "../assets/hero-image.webp";
import { ui } from "../i18n/ui";

interface Props {
    lang: "en" | "ar";
}

const { lang } = Astro.props;
const t = ui[lang];
const rsvpLink = lang === "ar" ? "/ar/rsvp" : "/rsvp";
---

<Layout title={lang === "ar" ? "الرئيسية" : "Welcome"} lang={lang}>
    <main class="page landing">
        <div class="content fade-in">
            <h1 class="anim anim-1">{t["index.title"]}</h1>
            <p class="subtitle anim anim-2">{t["index.subtitle"]}</p>

            <div class="hero-wrap anim anim-3">
                <Image
                    src={heroImg}
                    alt="Zaid & Haya"
                    class="hero-img"
                    width={600}
                    densities={[1.5, 2]}
                    loading="eager"
                    fetchpriority="high"
                />
            </div>

            <a href={rsvpLink} class="btn anim anim-4" data-astro-prefetch>
                {t["index.cta"]}
            </a>
        </div>
    </main>
</Layout>

<style>
    .landing {
        justify-content: center;
        padding-top: calc(var(--header-h) + var(--s-12));
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: var(--s-4);
        width: 100%;
        max-width: var(--max-w);
    }

    h1 {
        font-size: var(--fs-2xl);
        font-style: italic;
        padding: 0 var(--s-2);
    }

    .subtitle {
        font-size: var(--fs-base);
        color: var(--c-white-80);
        font-weight: 300;
    }

    .hero-wrap {
        width: 100%;
        max-width: 260px;
        margin: var(--s-4) 0;
        border-radius: var(--radius);
        overflow: hidden;
        box-shadow: var(--shadow);
    }

    .hero-img {
        width: 100%;
        height: auto;
        display: block;
    }

    .btn {
        max-width: 300px;
        margin-bottom: var(--s-12);
    }
</style>
