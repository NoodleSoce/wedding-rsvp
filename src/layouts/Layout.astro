---
import { ClientRouter } from "astro:transitions";
import { getImage } from "astro:assets";
import logoImg from "../assets/logo.webp";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/amiri";

interface Props {
	title: string;
	lang?: "en" | "ar";
	isLanding?: boolean;
}

const { title, lang = "en", isLanding = false } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description =
	lang === "ar"
		? "أنتم مدعوون للاحتفال بزفاف زيد وهيا"
		: "You're invited to celebrate the wedding of Zaid & Haya.";
const dir = lang === "ar" ? "rtl" : "ltr";

// Optimize logo once here
const logo = await getImage({
	src: logoImg,
	width: 600,
	format: "avif",
	quality: 90,
});

// Calculate paths
const path = Astro.url.pathname;
const targetPath =
	lang === "en"
		? path === "/"
			? "/ar"
			: `/ar${path}`
		: path.replace("/ar", "") || "/";
const buttonText = lang === "en" ? "ع" : "EN";
const isArabicBtn = lang === "en";
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, maximum-scale=5"
		/>
		<meta name="description" content={description} />
		<title>{fullTitle}</title>

		<meta name="theme-color" content="#4b0101" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />

		<!-- Preload Critical Assets -->
		<link rel="preload" as="image" href={logo.src} fetchpriority="high" />

		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta
			property="og:locale"
			content={lang === "ar" ? "ar_AE" : "en_US"}
		/>

		<ClientRouter />

		<!-- INLINED CRITICAL CSS -->
		<style is:inline define:vars={{ logoSrc: `url(${logo.src})` }}>
			/* Base */
			html,
			body {
				background: #4b0101;
				margin: 0;
				min-height: 100%;
			}

			/* Header - Zero Layout Shift */
			.header {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				z-index: 100;
				padding: 1rem;
				pointer-events: none;
				transform: translateZ(0);
			}
			.header-inner {
				max-width: 500px;
				margin: 0 auto;
				display: flex;
				align-items: center;
				justify-content: center;
				position: relative;
				padding: 0 3rem;
				height: 80px; /* Enforce height */
			}

			/* Logo */
			.logo-link {
				display: block;
				width: 220px;
				height: 73px;
				pointer-events: auto;
				contain: strict;
			}
			.logo-img {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: contain;
				/* Optimize rendering */
				image-rendering: -webkit-optimize-contrast;
			}

			/* Language Button */
			.lang-btn {
				position: absolute;
				right: 0;
				top: 50%;
				transform: translateY(-50%);
				width: 44px;
				height: 44px;
				display: flex;
				align-items: center;
				justify-content: center;
				font-family: "Libre Baskerville", serif;
				font-size: 0.85rem;
				font-weight: 600;
				color: #fff;
				text-decoration: none;
				background: rgba(255, 255, 255, 0.1);
				border: 1px solid rgba(255, 255, 255, 0.2);
				border-radius: 50%;
				pointer-events: auto;
				backdrop-filter: blur(4px);
				-webkit-backdrop-filter: blur(4px);
			}
			.lang-btn-ar {
				font-family: "Amiri", serif;
				font-size: 1.2rem;
				font-weight: 400;
				padding-top: 2px;
			}

			/* Sizes */
			@media (min-width: 400px) {
				.logo-link {
					width: 240px;
					height: 80px;
				}
				.header-inner {
					height: 90px;
				}
			}
			@media (min-width: 600px) {
				.logo-link {
					width: 260px;
					height: 87px;
				}
				.header-inner {
					height: 100px;
				}
			}
			@media (orientation: landscape) and (max-height: 500px) {
				.logo-link {
					width: 160px;
					height: 53px;
				}
				.header {
					padding: 0.5rem 1rem;
				}
				.header-inner {
					height: 60px;
				}
			}

			/* Animation - LANDING ONLY */
			.header.animate .logo-link {
				animation: fadeDown 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) both;
			}
			.header.animate .lang-btn {
				animation: fadeDownBtn 0.5s cubic-bezier(0.2, 0.8, 0.2, 1) 0.1s
					both;
			}
			@keyframes fadeDown {
				from {
					opacity: 0;
					transform: translateY(-12px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}
			@keyframes fadeDownBtn {
				from {
					opacity: 0;
					transform: translateY(calc(-50% - 12px));
				}
				to {
					opacity: 1;
					transform: translateY(-50%);
				}
			}
		</style>
	</head>
	<body>
		<!-- INLINED HEADER: Renders instantly with page -->
		<header class:list={["header", { animate: isLanding }]}>
			<div class="header-inner">
				<a
					href={lang === "ar" ? "/ar" : "/"}
					class="logo-link"
					aria-label="Home"
				>
					<img
						src={logo.src}
						alt="Zaid & Haya"
						class="logo-img"
						width="220"
						height="73"
						decoding="sync"
						loading="eager"
						fetchpriority="high"
					/>
				</a>

				<a
					href={targetPath}
					class:list={["lang-btn", { "lang-btn-ar": isArabicBtn }]}
					class="lang-btn"
					data-astro-prefetch
					aria-label={lang === "en"
						? "Switch to Arabic"
						: "Switch to English"}
					onclick="localStorage.setItem('preferred_lang', this.classList.contains('lang-btn-ar') ? 'ar' : 'en')"
				>
					{buttonText}
				</a>
			</div>
		</header>

		<slot />

		<!-- Language detection -->
		<script is:inline>
			(function () {
				if (sessionStorage.getItem("lang_detected")) return;
				sessionStorage.setItem("lang_detected", "1");
				if (localStorage.getItem("preferred_lang")) return;

				var isArabic = (navigator.language || "")
					.toLowerCase()
					.startsWith("ar");
				var path = location.pathname;
				var onArabic = path.startsWith("/ar");

				if (isArabic && !onArabic) {
					location.replace("/ar" + (path === "/" ? "" : path));
				} else if (!isArabic && onArabic) {
					location.replace(path.replace("/ar", "") || "/");
				}
			})();
		</script>
	</body>
</html>
