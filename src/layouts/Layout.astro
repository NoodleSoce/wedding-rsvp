---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/amiri";

interface Props {
	title: string;
	lang?: "en" | "ar";
}

const { title, lang = "en" } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description =
	"You're invited to celebrate the wedding of Zaid & Haya. Please RSVP to confirm your attendance.";
const dir = lang === "ar" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1, user-scalable=no"
		/>
		<link rel="icon" type="image/webp" href="/favicon.webp" />
		<meta name="theme-color" content="#4b0101" />
		<meta name="color-scheme" content="dark" />
		<meta name="generator" content={Astro.generator} />
		<!-- Mobile Web App Capable -->
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>
		<meta name="format-detection" content="telephone=no" />
		<title>{fullTitle}</title>

		<!-- Open Graph / Social Sharing -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={fullTitle} />
		<meta name="twitter:description" content={description} />
		<meta property="og:image" content="/hero-image.webp" />
		<meta name="twitter:image" content="/hero-image.webp" />

		<!-- Preconnect and DNS Prefetch -->
		<link rel="dns-prefetch" href="https://script.google.com" />
		<link rel="dns-prefetch" href="https://www.google.com" />
		<link rel="preconnect" href="https://script.google.com" />
		<link rel="preconnect" href="https://www.google.com" />
		<link rel="preconnect" href="https://www.gstatic.com" crossorigin />
		<link rel="preconnect" href="https://maps.googleapis.com" />
		<link rel="preconnect" href="https://maps.gstatic.com" />

		<!-- SEO: Language Alternates -->
		<link
			rel="alternate"
			hreflang="en"
			href={Astro.url.origin + Astro.url.pathname.replace("/ar", "")}
		/>
		<link
			rel="alternate"
			hreflang="ar"
			href={Astro.url.origin +
				"/ar" +
				Astro.url.pathname.replace("/ar", "")}
		/>

		<ClientRouter />
	</head>
	<body>
		<Header lang={lang} />
		<slot />
	</body>
</html>
