---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/amiri";

interface Props {
	title: string;
	lang?: "en" | "ar";
	isLanding?: boolean;
}

const { title, lang = "en", isLanding = false } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description =
	lang === "ar"
		? "أنتم مدعوون للاحتفال بزفاف زيد وهيا"
		: "You're invited to celebrate the wedding of Zaid & Haya.";
const dir = lang === "ar" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, maximum-scale=5"
		/>
		<meta name="description" content={description} />
		<title>{fullTitle}</title>

		<meta name="theme-color" content="#4b0101" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />

		<!-- Mobile web app -->
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>

		<!-- Open Graph -->
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta
			property="og:locale"
			content={lang === "ar" ? "ar_AE" : "en_US"}
		/>

		<ClientRouter />

		<!-- Preload critical fonts prevents FOUT/FOIT -->
		<!-- Note: Font source paths handled by Vite/Astro, implicit preloading usually works well -->
		<!-- Enforcing styles early -->
		<style is:inline>
			html {
				background: #4b0101;
				height: 100%;
				/* Prevent text hiding while font loads */
				font-family: "Libre Baskerville", "Amiri", serif;
			}
			body {
				margin: 0;
				min-height: 100%;
			}
		</style>
	</head>
	<body>
		<Header lang={lang} isLanding={isLanding} />
		<slot />

		<!-- Language detection -->
		<script is:inline>
			(function () {
				if (sessionStorage.getItem("lang_detected")) return;
				sessionStorage.setItem("lang_detected", "1");
				if (localStorage.getItem("preferred_lang")) return;

				var isArabic = (navigator.language || "")
					.toLowerCase()
					.startsWith("ar");
				var path = location.pathname;
				var onArabic = path.startsWith("/ar");

				if (isArabic && !onArabic) {
					location.replace("/ar" + (path === "/" ? "" : path));
				} else if (!isArabic && onArabic) {
					location.replace(path.replace("/ar", "") || "/");
				}
			})();
		</script>
	</body>
</html>
