---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource/playfair-display";
import "@fontsource/playfair-display/400-italic.css";
import "@fontsource/playfair-display/600.css";
import "@fontsource/playfair-display/700.css";

interface Props {
	title: string;
	lang?: "en" | "ar";
	headerAnimation?: boolean;
}

const { title, lang = "en", headerAnimation = false } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description =
	lang === "ar"
		? "أنتم مدعوون للاحتفال بزفاف زيد وهيا"
		: "You're invited to celebrate the wedding of Zaid & Haya.";
const dir = lang === "ar" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1, user-scalable=no, interactive-widget=resizes-visual"
		/>
		<meta name="description" content={description} />
		<title>{fullTitle}</title>

		<meta name="theme-color" content="#4b0101" />
		<meta name="color-scheme" content="dark" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />

		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>

		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/hero-image.webp" />
		<meta
			property="og:locale"
			content={lang === "ar" ? "ar_AE" : "en_US"}
		/>

		<link rel="preconnect" href="https://script.google.com" />
		<link rel="preconnect" href="https://www.google.com" />

		<ClientRouter />
	</head>
	<body>
		<Header lang={lang} showAnimation={headerAnimation} />
		<slot />

		<script is:inline>
			// Language detection - runs once on first visit
			(function () {
				var k = "lang_set";
				if (sessionStorage.getItem(k)) return;
				sessionStorage.setItem(k, "1");

				var pref = localStorage.getItem("preferred_lang");
				if (pref) return;

				var isAr = (navigator.language || navigator.userLanguage || "")
					.toLowerCase()
					.startsWith("ar");
				var path = location.pathname;
				var onAr = path.startsWith("/ar");

				if (isAr && !onAr) {
					location.replace("/ar" + (path === "/" ? "" : path));
				} else if (!isAr && onAr) {
					location.replace(path.replace("/ar", "") || "/");
				}
			})();
		</script>
	</body>
</html>
