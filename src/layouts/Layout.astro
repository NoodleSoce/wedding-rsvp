---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/amiri";

interface Props {
	title: string;
	lang?: "en" | "ar";
}

const { title, lang = "en" } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description =
	"You're invited to celebrate the wedding of Zaid & Haya. Please RSVP to confirm your attendance.";
const dir = lang === "ar" ? "rtl" : "ltr";
const path = Astro.url.pathname;
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1, user-scalable=no, interactive-widget=resizes-visual"
		/>
		<meta name="description" content={description} />
		<title>{fullTitle}</title>

		<!-- Theme -->
		<meta name="theme-color" content="#4b0101" />
		<meta name="color-scheme" content="dark" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />

		<!-- Mobile -->
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>
		<meta name="format-detection" content="telephone=no" />

		<!-- Social -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/hero-image.webp" />
		<meta name="twitter:card" content="summary" />

		<!-- Preconnect -->
		<link rel="preconnect" href="https://script.google.com" />
		<link rel="preconnect" href="https://www.google.com" />
		<link rel="preconnect" href="https://maps.googleapis.com" />

		<!-- i18n -->
		<link
			rel="alternate"
			hreflang="en"
			href={Astro.url.origin + path.replace("/ar", "")}
		/>
		<link
			rel="alternate"
			hreflang="ar"
			href={Astro.url.origin + "/ar" + path.replace("/ar", "")}
		/>

		<ClientRouter />

		<script is:inline>
			(function () {
				if (localStorage.getItem("preferred_lang")) return;
				if (
					navigator.language?.startsWith("ar") &&
					!location.pathname.startsWith("/ar")
				) {
					location.href =
						"/ar" +
						(location.pathname === "/" ? "" : location.pathname);
				}
			})();
		</script>
	</head>
	<body>
		<Header lang={lang} />
		<slot />
	</body>
</html>
