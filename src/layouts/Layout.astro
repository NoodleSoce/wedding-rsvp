---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/amiri";

interface Props {
	title: string;
	lang?: "en" | "ar";
}

const { title, lang = "en" } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description = "You're invited to celebrate the wedding of Zaid & Haya.";
const dir = lang === "ar" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1, user-scalable=no, interactive-widget=resizes-visual"
		/>
		<meta name="description" content={description} />
		<title>{fullTitle}</title>

		<meta name="theme-color" content="#4b0101" />
		<meta name="color-scheme" content="dark" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />

		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>

		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/hero-image.webp" />

		<link rel="preconnect" href="https://script.google.com" />
		<link rel="preconnect" href="https://www.google.com" />

		<ClientRouter />
	</head>
	<body>
		<Header lang={lang} />
		<slot />

		<script is:inline>
			// Language detection - runs once on first visit
			(function () {
				var k = "lang_set";
				if (sessionStorage.getItem(k)) return;
				sessionStorage.setItem(k, "1");

				var pref = localStorage.getItem("preferred_lang");
				if (pref) return;

				var isAr = (navigator.language || "").startsWith("ar");
				var onAr = location.pathname.startsWith("/ar");

				if (isAr && !onAr) {
					location.replace(
						"/ar" +
							(location.pathname === "/"
								? ""
								: location.pathname),
					);
				} else if (!isAr && onAr) {
					location.replace(
						location.pathname.replace("/ar", "") || "/",
					);
				}
			})();
		</script>
	</body>
</html>
