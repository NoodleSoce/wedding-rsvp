---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/amiri";

interface Props {
	title: string;
	lang?: "en" | "ar";
	isLanding?: boolean;
}

const { title, lang = "en", isLanding = false } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description =
	lang === "ar"
		? "أنتم مدعوون للاحتفال بزفاف زيد وهيا"
		: "You're invited to celebrate the wedding of Zaid & Haya.";
const dir = lang === "ar" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, maximum-scale=5"
		/>
		<meta name="description" content={description} />
		<title>{fullTitle}</title>

		<meta name="theme-color" content="#4b0101" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />

		<!-- Mobile web app -->
		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>

		<!-- Open Graph -->
		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta
			property="og:locale"
			content={lang === "ar" ? "ar_AE" : "en_US"}
		/>

		<ClientRouter />

		<!-- CRITICAL CSS: Inlined to prevent flash of unstyled content -->
		<style is:inline>
			/* Base Reset */
			html,
			body {
				background: #4b0101;
				margin: 0;
				height: 100%;
				/* Prevent text hiding while font loads */
				font-family: "Libre Baskerville", "Amiri", serif;
			}

			/* Critical Header Styles for Instant Paint */
			.header {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				z-index: 100;
				padding: 1rem;
				pointer-events: none;
				/* Force GPU */
				transform: translateZ(0);
			}
			.header-inner {
				max-width: 500px;
				margin: 0 auto;
				display: flex;
				align-items: center;
				justify-content: center;
				position: relative;
				padding: 0 3rem;
			}
			.logo {
				display: block;
				width: 220px;
				height: 73px;
				pointer-events: auto;
			}
			.logo img {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: contain;
			}
			/* Media queries for logo size */
			@media (min-width: 400px) {
				.logo {
					width: 240px;
					height: 80px;
				}
			}
			@media (min-width: 600px) {
				.logo {
					width: 260px;
					height: 87px;
				}
			}
		</style>
	</head>
	<body>
		<Header lang={lang} isLanding={isLanding} />
		<slot />

		<!-- Language detection -->
		<script is:inline>
			(function () {
				if (sessionStorage.getItem("lang_detected")) return;
				sessionStorage.setItem("lang_detected", "1");
				if (localStorage.getItem("preferred_lang")) return;

				var isArabic = (navigator.language || "")
					.toLowerCase()
					.startsWith("ar");
				var path = location.pathname;
				var onArabic = path.startsWith("/ar");

				if (isArabic && !onArabic) {
					location.replace("/ar" + (path === "/" ? "" : path));
				} else if (!isArabic && onArabic) {
					location.replace(path.replace("/ar", "") || "/");
				}
			})();
		</script>
	</body>
</html>
