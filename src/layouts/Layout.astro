---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/amiri";

interface Props {
	title: string;
	lang?: "en" | "ar";
	headerAnimation?: boolean;
}

const { title, lang = "en", headerAnimation = false } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description =
	lang === "ar"
		? "أنتم مدعوون للاحتفال بزفاف زيد وهيا"
		: "You're invited to celebrate the wedding of Zaid & Haya.";
const dir = lang === "ar" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1, user-scalable=no, interactive-widget=resizes-visual"
		/>
		<meta name="description" content={description} />
		<title>{fullTitle}</title>

		<meta name="theme-color" content="#4b0101" />
		<meta name="color-scheme" content="dark" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />

		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>

		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/hero-image.webp" />
		<meta
			property="og:locale"
			content={lang === "ar" ? "ar_AE" : "en_US"}
		/>

		<link rel="dns-prefetch" href="https://script.google.com" />
		<link rel="dns-prefetch" href="https://www.google.com" />
		<link rel="preconnect" href="https://script.google.com" crossorigin />

		<ClientRouter />

		<!-- CRITICAL: These styles MUST load first and lock ALL dimensions -->
		<style is:inline>
			/* Set background immediately */
			html {
				background: #4b0101;
				height: 100%;
			}
			body {
				background: #4b0101;
				margin: 0;
			}

			/* FIXED container that CLIPS everything - nothing can escape */
			.logo-box {
				display: block;
				width: 217px;
				height: 72px;
				overflow: hidden;
				position: relative;
			}
			/* Image fills container exactly */
			.logo-box img {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: contain;
				position: absolute;
				top: 0;
				left: 0;
			}
			/* Button with ALL styles inline */
			.lang-box {
				display: flex;
				justify-content: center;
				align-items: center;
				width: 44px;
				height: 44px;
				font-family: "Libre Baskerville", Georgia, serif;
				font-size: 0.875rem;
				font-weight: 600;
				color: #fff;
				background: rgba(255, 255, 255, 0.1);
				border: 1px solid rgba(255, 255, 255, 0.2);
				border-radius: 50%;
				text-decoration: none;
				position: absolute;
				right: 0;
				top: 50%;
				transform: translateY(-50%);
			}
			.lang-box.is-ar {
				font-family: "Amiri", Georgia, serif;
				font-size: 1.25rem;
				font-weight: 400;
				line-height: 1;
				padding-top: 2px;
			}
			/* Responsive */
			@media (min-width: 400px) {
				.logo-box {
					width: 241px;
					height: 80px;
				}
			}
			@media (min-width: 600px) {
				.logo-box {
					width: 265px;
					height: 88px;
				}
			}
			@media (orientation: landscape) and (max-height: 500px) {
				.logo-box {
					width: 156px;
					height: 52px;
				}
			}
		</style>
	</head>
	<body>
		<Header lang={lang} showAnimation={headerAnimation} />
		<slot />

		<script is:inline>
			(function () {
				var k = "lang_set";
				if (sessionStorage.getItem(k)) return;
				sessionStorage.setItem(k, "1");
				if (localStorage.getItem("preferred_lang")) return;
				var a = (navigator.language || "")
						.toLowerCase()
						.startsWith("ar"),
					p = location.pathname,
					o = p.startsWith("/ar");
				if (a && !o) location.replace("/ar" + (p === "/" ? "" : p));
				else if (!a && o) location.replace(p.replace("/ar", "") || "/");
			})();
		</script>
	</body>
</html>
