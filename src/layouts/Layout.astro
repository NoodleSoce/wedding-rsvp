---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import "../styles/global.css";
import "@fontsource/libre-baskerville";
import "@fontsource/libre-baskerville/400-italic.css";
import "@fontsource/libre-baskerville/700.css";
import "@fontsource/amiri";

interface Props {
	title: string;
	lang?: "en" | "ar";
	headerAnimation?: boolean;
}

const { title, lang = "en", headerAnimation = false } = Astro.props;
const fullTitle = `${title} | Zaid & Haya`;
const description =
	lang === "ar"
		? "أنتم مدعوون للاحتفال بزفاف زيد وهيا"
		: "You're invited to celebrate the wedding of Zaid & Haya.";
const dir = lang === "ar" ? "rtl" : "ltr";
---

<!doctype html>
<html lang={lang} dir={dir}>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, viewport-fit=cover, maximum-scale=1, user-scalable=no, interactive-widget=resizes-visual"
		/>
		<meta name="description" content={description} />
		<title>{fullTitle}</title>

		<meta name="theme-color" content="#4b0101" />
		<meta name="color-scheme" content="dark" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />

		<meta name="mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta
			name="apple-mobile-web-app-status-bar-style"
			content="black-translucent"
		/>

		<meta property="og:title" content={fullTitle} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/hero-image.webp" />
		<meta
			property="og:locale"
			content={lang === "ar" ? "ar_AE" : "en_US"}
		/>

		<!-- DNS prefetch for external resources -->
		<link rel="dns-prefetch" href="https://script.google.com" />
		<link rel="dns-prefetch" href="https://www.google.com" />

		<!-- Preconnect only when needed -->
		<link rel="preconnect" href="https://script.google.com" crossorigin />

		<ClientRouter />

		<!-- Critical inline styles - instant background -->
		<style is:inline>
			html {
				background: #4b0101;
			}
		</style>
	</head>
	<body>
		<!-- Header persists across page transitions - no re-render, no flash -->
		<div transition:persist="header">
			<Header lang={lang} showAnimation={headerAnimation} />
		</div>
		<slot />

		<script is:inline>
			// Language detection - runs once on first visit
			(function () {
				var k = "lang_set";
				if (sessionStorage.getItem(k)) return;
				sessionStorage.setItem(k, "1");
				if (localStorage.getItem("preferred_lang")) return;
				var a = (navigator.language || "")
						.toLowerCase()
						.startsWith("ar"),
					p = location.pathname,
					o = p.startsWith("/ar");
				if (a && !o) location.replace("/ar" + (p === "/" ? "" : p));
				else if (!a && o) location.replace(p.replace("/ar", "") || "/");
			})();
		</script>
	</body>
</html>
